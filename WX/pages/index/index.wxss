/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.tab-nav {
  display: flex;
  flex-direction: horizontal;
  justify-content: space-between; 
  font-size: 24rpx;
  margin: 0 20rpx;
}

.tab-item {
  margin: 20rpx;
}

.show-Panel {
  display: show;
}

.hide-Panel {
  display: hide;
}

.active-tab {
  border-bottom: 2px solid blue;
  color: red;
}

.inactive-tab {
  border-bottom: none;
}

.work-panel {
  width: 90vw;
  height: 90vh;
  margin: 0 auto;
  background: black;
  border: 2px dashed red;
}
.work-swipe {
  border-radius: 50rpx;
  border: 1 px solid pink;
  background: white;
  width: 100%;
  height: 100%;
}