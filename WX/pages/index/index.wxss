/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/* - - - - TAB BAR */

.tab-nav {
  display: flex;
  flex-direction: horizontal;
  justify-content: space-between; 
  font-size: 30rpx;
  margin: 20rpx;
}

.tab-item {
  margin: 20rpx;
}

.show-Panel {
  display: show;
}

.hide-Panel {
  display: hide;
}

.active-tab {
  border-bottom: 2px solid blue;
  color: red;
}

.inactive-tab {
  border-bottom: none;
}

.work-panel {
  width: 90vw;
  height: 90vh;
  margin: 0 auto;
  /* border: 2px dashed red; */
  box-shadow: 5rpx, 5rpx, 10rpx, rgba(0,0,0,.5)
  transform: skewY(-2deg);
  transform-origin: bottom left;
 
}
.work-swipe {
  /* border-radius: 50rpx; */
  border: 1 px solid purple;
  /* background:aqua; */
  width: 100%;
  height: 95%;
  margin: 0 auto;
}

.swipe-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  width: 90%; 
  height: 90%; 
  border-radius: 30rpx;
  background: yellow;
}

.swipe-item-image {
  margin: 0 auto;
  background: lightgray;
  /* border: 1px solid aquamarine; */
  width: 100%;
  height: 100%;
  text-align: center;
}

.swipe-item-label {
  position: absolute;
  bottom: 50rpx;
  left: 30rpx;
  right: 0;
  display: flex;
  flex-direction: column;
  margin: 20rpx 30rpx;
  text-shadow: 3px, 3px, 5px, (0,0,0,.4);
  transform: skewY(-2deg);
  transform-origin: bottom left;
}

.label-title{
  font-size: 60rpx;
}
.label-subtitle{
  font-size: 30rpx;
}

.swipe-summary{
  position: absolute;
  bottom: 0;
  height: 100%;
  width: 100%;
  background: black;
  color: white;
  display: flex;
  flex-direction: column;
  text-align: left;
  padding: 30rpx;
}